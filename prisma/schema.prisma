datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                    String      @id @default(cuid())
  name                  String
  email                 String      @unique
  password              String
  lastLogin             DateTime?
  status                UserStatus  @default(ACTIVE) // This is crucial
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  passwordResetToken    String?     @unique
  passwordResetExpires  DateTime?
}

// This enum definition is what needs to be synced with your DB
enum UserStatus {
  ACTIVE
  BLOCKED
}