datasource db {
  provider = "postgresql" // Or "mysql", "sqlite", etc. based on your setup
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                  String    @id @default(cuid())
  name                String
  email               String    @unique
  password            String
  lastLogin           DateTime?
  status              String    @default("ACTIVE") // e.g., "ACTIVE", "BLOCKED"
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt // Automatically updates on record change
  passwordResetToken  String?   @unique // Optional: for password reset functionality
  passwordResetExpires DateTime? // Optional: for password reset functionality expiration
}